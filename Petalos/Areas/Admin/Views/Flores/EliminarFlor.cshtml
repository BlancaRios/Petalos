@model Petalos.Models.Datosflore
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
@{
    ViewData["Title"] = "EliminarFlor";
    Layout = "_Layout";
}

@*VIEW DE ADMIN *@

<div style="width:100%">

    <p style="color:#2483A6;font-size:20px;width: 100%; text-align: center; font-size: larger; display: block;">¿Seguro de eliminar la flor <b>@(Model.Nombre) 🌷</b>?</p>
    <br />
    <form method="post" asp-area="Admin" asp-controller="Flores" asp-action="EliminarFlor">
        <input asp-for="Nombre" value="@(Model.Nombre)" hidden />
        <input asp-for="Idflor" value="@(Model.Idflor)" hidden />
        <p style="color:red;text-align:center; font-size:15px">
            @Html.ValidationSummary()
        </p>
        <div style="margin-left:350px">
            <input style="float:left;width:100px;margin:auto" type="submit" value="Eliminar">
            <a href="~/admin/" style=" line-height: 18px; width: 100px; height: 18px; display: block; text-align: center; text-decoration: none; background-color: #2483A6; color: white; padding: 5px; border: 1px solid black; float: left; margin-left: 20px ">
                ❌
            </a>
        </div>
    </form>
</div>


<br class="clear" />
